<proeject>
    <plugins>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.0.0</version>
            <executions>
                <execution>
                    <phase>compile</phase>
                    <goals>
                        <goal>exec</goal>
                    </goals>
                </execution>
            </executions>
            <configuration>
                <executable>js</executable>
                <arguments>
                    <argument>${project.basedir}/script.js</argument>
                </arguments>
            </configuration>
        </plugin>
    </plugins>
</project>

